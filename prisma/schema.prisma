generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  username      String          @unique
  email         String?
  name          String?
  github_token  String
  github_id     Int
  access_token  String
  documentation Documentation[]
}

model Documentation {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  repoName String @unique
  user    User?  @relation(fields: [userId], references: [id])
  userId  Int
}
